@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_LayoutWithoutNavBar";
}

<!--ESTILO REPETIDO EN TODO LO DE FORGOT PASSWORD-->
<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
</style>

<h2 class="text-center mb-4 mt-3 display-3">¿Olvidaste tu contraseña?</h2>
<hr />
<div class="row">
    <div class="col-md-6 align-self-center">
        <h5> Introduce tu correo electrónico</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-80 btn btn-lg btn-primary">Restablecer Contraseña</button>
        </form>
    </div>
    <div class="col-md-6 d-flex align-items-center justify-content-center">
        <img src="~/images/fox-forgetPass.png" alt="Imagen de la recuperación de contraseña" class="img-fluid" width="70%" height="70%"/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
