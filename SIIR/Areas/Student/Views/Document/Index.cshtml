@model SIIR.Models.ViewModels.DocumentVM
@{
    ViewData["Title"] = "Documentos";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .form-label {
        font-weight: 600;
    }

    .btn-primary {
        background-color: #1a3c6e;
        border-color: #1a3c6e;
    }

        .btn-primary:hover {
            background-color: #15305a;
            border-color: #15305a;
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #545b62;
        }

    .info-container {
        max-width: 800px;
        margin: 2vw auto;
    }

    .form {
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        margin-bottom: 25px;
        border-radius: 10px;
    }

    .title {
        background-color: #1a3c6e;
        color: white;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        padding: 10px;
    }

    .form-control:focus {
        border-color: #1a3c6e;
        box-shadow: 0 0 0 0.2rem rgba(26,60,110,.25);
    }

    .nav-tabs .nav-link {
        color: #1a3c6e;
    }

        .nav-tabs .nav-link.active {
            color: #fff;
            background-color: #1a3c6e;
            border-color: #1a3c6e;
        }

    .tab-content {
        border: 1px solid #dee2e6;
        border-top: none;
        padding: 20px;
    }

    .info-card {
        background-color: #f8f9fa;
        border-radius: 5px;
        padding: 15px;
        margin-bottom: 15px;
    }

        .info-card h6 {
            color: #1a3c6e;
            margin-bottom: 10px;
        }
</style>

<div class="container info-container">
    <div class="bg-white rounded-3 shadow-sm p-4">
        <h2 class="text-center mb-4">Documentos</h2>
        <br />
        <br />
        <table id="tblDocument" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nombre del Documento</th>
                    <th>Estado</th>
                    <th>Fecha de Subida</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var document in Model.ListaDocumenCatalog)
                {
                    <tr>
                        <td>@document.Text</td>
                        <td>Pendiente</td>
                        <td>@Model.Document.UploadDate</td>
                        <td>
                            <a asp-action="ViewDocument" asp-route-id="@document.Value" class="btn btn-info btn-sm">
                                <i class="fa-solid fa-eye"></i> Visualizar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-12 d-flex mt-3 justify-content-center">
            <!--button type="button" class="btn btn-secondary mx-3"
                    onclick="location.href='@Url.Action("Dashboard", "Users")'">
                Regresar
            </!--button-->
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            <a asp-action="Edit" class="btn btn-primary"> Editar Documentos</a>
        </div>
    </div>
    @* <div class="row">
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-action="" class="btn btn-secondary">Regresar</a>
            <a asp-action="Edit" class="btn btn-primary"><i class="fa-solid fa-edit"></i> Editar Documentos</a>
        </div>
    </div> *@
</div>

@section Scripts {
    <script src="~/js/document.js"></script>
}