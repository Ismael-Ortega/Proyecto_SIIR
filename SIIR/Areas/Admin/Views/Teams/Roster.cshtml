@{
    ViewData["Title"] = "Plantilla del Equipo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h1 class="display-4">Plantilla del Equipo</h1>
            
            <h5 id="captain" class="mt-4">Capitán: <span id="captainName"></span></h5>
        </div>
    </div>

    <br />
    <br />

    <table id="tblRoster" class="table table-striped table-bordered" style="width:100%">
