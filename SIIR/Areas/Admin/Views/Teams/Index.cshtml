@{
    ViewData["Title"] = "Lista de Equipos";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-sm-8 col-12 mb-2 mb-sm-0">
            <h1 class="display-4 m-0">Equipos @ViewData["Category"]</h1>
        </div>
        <div class="col-sm-4 col-12 text-sm-end text-center">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Dar de alta nuevo Equipo</a>
        </div>
    </div>

    <br />
    <br />

    <div class="table-responsive">
        <table id="tblTeams" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Categoria</th>
                    <th>Imagen</th>
                    <th>Coach</th>
                    <th>Representativo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
    
</div>

@section Scripts {
    <script src="~/js/teams.js"></script>
    <script>
        var category = "@ViewData["Category"]"; 
    </script>
}