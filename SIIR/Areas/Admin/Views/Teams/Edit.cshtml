@model SIIR.Models.ViewModels.TeamVM
@{
    ViewData["Title"] = "Modificar Equipo";
}

<link rel="stylesheet" href="~/css/admin/teams/edit.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="bg-white rounded-3 shadow-sm p-4">
                <h2 class="text-center mb-4 display-2">Editar Equipo</h2>
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Team.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="Representativo" class="form-label fw-bold">Representativo</label>
                                @Html.DropDownListFor(m => m.Team.RepresentativeId, Model.RepresentativeList, "Selecciona un Grupo Representativo:", new { @class = "form-select" })
                                <span asp-validation-for="Team.RepresentativeId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Team.Category" class="form-label fw-bold">Categoría</label>
                                <select asp-for="Team.Category" class="form-select">
                                    <option value="">Seleccione una opción</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                    <option value="Mixto">Mixto</option>
                                </select>
                                <span asp-validation-for="Team.Category" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Team.ImageUrl" class="form-label fw-bold">Imagen del equipo</label>
                                <input type="file" class="form-control" name="archivos" id="subidaArchivo" />
                                <span asp-validation-for="Team.ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label for="Coach" class="form-label fw-bold">Coach</label>
                                @Html.DropDownListFor(m => m.Team.CoachId, Model.CoachList, "Selecciona un Coach:", new { @class = "form-select" })
                                <span asp-validation-for="Team.CoachId" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Vista previa de la imagen</label>
                                <img src="@Model.Team.ImageUrl" class="img-fluid rounded border p-1" alt="Vista previa" />
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary w-100 mb-2">
                                <i class="fas fa-save me-2"></i> Guardar Cambios
                            </button>
                        </div>
                        <div class="col-md-6">
                            <a asp-action="Index" class="btn btn-secondary w-100">
                                <i class="fas fa-arrow-left me-2"></i> Volver
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>