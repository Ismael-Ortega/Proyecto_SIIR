@model SIIR.Models.ViewModels.TeamVM

@{
    ViewData["Title"] = "Crear Equipo";
}

<h2 class="display-2">Dar de alta nuevo Equipo</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row px-2 offset-1" border>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div-- class="col-10 offset-1 mt-4">
                        <div class="form-group row">
                            <div class="col-4">
                                <label asp-for="Team.Name">Nombre</label>
                            </div>
                            <div class="col-8">
                                <input asp-for="Team.Name" class="form-control" placeholder="Ingresa el nombre del equipo" />
                                <span asp-validation-for="Team.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-2">
                            <div class="col-4">
                                <label asp-for="Team.Category">Categoria</label>
                            </div>
                            <div class="col-8">
                                <select asp-for="Team.Category" class="form-control">
                                    <option value="">Seleccione una opción</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                </select>
                                <span asp-validation-for="Team.Category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-2">
                            <div class="col-4">
                                <label asp-for="Team.ImageUrl">Imagen del equipo</label>
                            </div>
                            <div class="col-8">
                                <input type="file" class="form-control" name="archivos" id="subidaArchivo" />
                                <span asp-validation-for="Team.ImageUrl" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-2">
                            <div class="col-4">
                                <label for="Coach">Coach</label>
                            </div>
                            <div class="col-8">
                                @Html.DropDownListFor(m => m.Team.CoachId, Model.CoachList, "Selecciona un Coach:", new { @class = "form-control" })
                                <span asp-validation-for="Team.CoachId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row mt-2">
                            <div class="col-4">
                                <label for="Representativo">Representativo</label>
                            </div>
                            <div class="col-8">
                                @Html.DropDownListFor(m => m.Team.RepresentativeId, Model.RepresentativeList, "Selecciona un Grupo Representativo:", new { @class = "form-control" })
                                <span asp-validation-for="Team.RepresentativeId" class="text-danger"></span>
                            </div>
                        </div>

                        <p class="">Agregar prendas al grupo</p>

                        <!-- Bloque dinámico de uniformes -->
                        <div id="uniformsContainer">
                            
                        </div>

                        <!-- Botón para agregar un nuevo bloque de uniformes -->
                        <div class="form-group row mt-2">
                            <div class="col-4"></div>
                            <div class="col-8">
                                <button type="button" id="addUniformBtn" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Añadir Uniforme
                                </button>
                            </div>
                        </div>

                        <div class="form-group-row">
                            <div class="col-8">
                                <partial name="_VistaCrearVolver" />
                            </div>
                        </div>

                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
        <script>
                $(document).ready(function () {
    var uniformIndex = $('#uniformsContainer .uniform-item').length || 0;

    $('#addUniformBtn').click(function () {
        var newUniform = `
            <div class="form-group row mt-2 uniform-item">
                <div class="col-4">
                    <label for="UniformCatalog">Uniforme</label>
                </div>
                <div class="col-8">
                    <select name="SelectedUniformCatalogIds[` + uniformIndex + `]" class="form-control">
                        <option value="">Selecciona una prenda:</option>
                        @foreach (var item in Model.UniformCatalogList)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="col-12 mt-2 text-end">
                    <button type="button" class="btn btn-danger remove-uniform-btn">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </button>
                </div>
            </div>
        `;
        $('#uniformsContainer').append(newUniform); // Agrega el nuevo bloque al contenedor
        uniformIndex++; // Incrementa el índice para futuros uniformes
    });

    // Manejar eliminar uniforme
    $('#uniformsContainer').on('click', '.remove-uniform-btn', function () {
        $(this).closest('.uniform-item').remove();
    });
});


        </script>
}