@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-8">
            <h1 class="display-4">Estudiantes</h1>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
                <i class="fas fa-plus"></i> Dar de alta nuevo Estudiante
            </a>
        </div>
    </div>
    <br />
    <div class="table-responsive">
        <table id="tblStudents" class="table table-striped table-bordered w-100 nowrap mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Foto</th>
                    <th>Equipo</th>
                    <th>Coach</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/students.js"></script>
}