@{
    ViewData["Title"] = "Lista de Estudiantes";
}

<link rel="stylesheet" href="~/css/admin/students/filters.css" />

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-8">
            <h1 class="display-4">Estudiantes</h1>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
                <i class="fas fa-plus"></i> Dar de alta nuevo Estudiante
            </a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-4">
            <div class="filter-card">
                <div class="filter-header">
                    <i class="fas fa-graduation-cap filter-icon"></i>
                    <span class="filter-label">Filtrar por Carrera</span>
                </div>
                <select id="careerFilter" class="form-select filter-select-alt">
                    <option value="">Todas las carreras</option>
                </select>
            </div>
        </div>
    </div>

    <div class="table-responsive mt-4">
        <table id="tblStudents" class="table table-striped table-bordered w-100 nowrap mt-3">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Foto</th>
                    <th>Equipo</th>
                    <th>Coach</th>
                    <th>Carrera</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/student.js"></script>
}