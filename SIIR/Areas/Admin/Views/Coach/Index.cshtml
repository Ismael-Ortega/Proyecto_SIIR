@{
    ViewData["Title"] = "Lista de Coaches";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-8">
            <h1 class="display-4">Coaches</h1>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
                <i class="fas fa-plus"></i> Dar de alta nuevo Coach
            </a>
        </div>
    </div>

    <br />
    <br />

    <div class="table-responsive">
        <table id="tblCategoriasCoach" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/coaches.js"></script>
}