@{
    ViewData["Title"] = "Lista de Coaches";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Categorias Coach</h2><!--REVISION-->
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>Crear Nuevo Coach</a>
        </div>
    </div>

    <br />
    <br />

    <table id="tblCategoriasCoach" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Acciones</th>
            </tr>
        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/coach.js"></script>
}