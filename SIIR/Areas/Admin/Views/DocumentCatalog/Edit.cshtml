@model SIIR.Models.DocumentCatalog

@{
    ViewData["Title"] = "Editar Documento";
}

<br />
<br />
<h2 class="text-center"> Editar Documento</h2>
<form method="POST" asp-action="Edit">
    <div class="row px-2 mx-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12 mt-4">
            <div class="form-group row">
                <div class="col-md-4 col-sm-12">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-8 col-sm-12">
                    <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <div class="col-md-4 col-sm-12">
                    <label asp-for="Extension"></label>
                </div>
                <div class="col-md-8 col-sm-12">
                    <select asp-for="Extension" class="form-control" asp-items="ViewBag.Extensiones"></select>
                    <span asp-validation-for="Extension" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <div class="col-md-4 col-sm-12">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-md-8 col-sm-12">
                    <textarea asp-for="Description" class="form-control" placeholder="Ingresa la descripción" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="row mt-4">
                <div class="col-md-6 col-sm-12 mb-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-save me-2"></i> Guardar Cambios
                    </button>
                </div>
                <div class="col-md-6 col-sm-12">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="fas fa-arrow-left me-2"></i> Volver
                    </a>
                </div>
            </div>
            <br />
        </div>
    </div>
</form>
