@{
    ViewData["Title"] = "Lista de Documentos";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de Documentos</h2><!--REVISION-->
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Documento</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblDocumentCatalog" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Extensión</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/documentCatalog.js"></script>
}