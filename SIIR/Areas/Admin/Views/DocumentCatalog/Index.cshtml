@{
    ViewData["Title"] = "Lista de Documentos";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-8">
            <h1 class="display-4">Lista de Documentos</h1>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Documento</a>
        </div>
    </div>

    <br />
    <br />

    <div class="table-responsive">
        <table id="tblDocumentCatalog" class="table table-striped table-bordered w-100 nowrap mt-3">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Extensión</th>
                    <th>Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/documentsCatalog.js"></script>
}