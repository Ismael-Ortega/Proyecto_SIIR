@model SIIR.Models.UniformCatalog
@{
    ViewData["Title"] = "Crear uniforme";
}

<br />
<br />
<h2 class="text-center">Crear un nuevo uniforme</h2>
<form method="POST" asp-action="Create" enctype="multipart/form-data">
    <div class="row px-2 border mx-3 rounded-2">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-12 mt-4">
            <div class="form-group row">
                <div class="col-md-4 col-sm-12">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-md-8 col-sm-12">
                    <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre del uniforme" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-4 col-sm-12">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-md-8 col-sm-12">
                    <textarea asp-for="Description" class="form-control" placeholder="Ingresa la descripción" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-2">
                <div class="col-12">
                    <partial name="_VistaCrearVolver" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
