@{
	ViewData["Title"] = "Lista de Uniformes";
}

<div class="container-fluid mt-4">
	<div class="row align-items-center">
		<div class="col-sm-8 col-12 mb-2 mb-sm-0">
			<h1 class="display-4 m-0">Lista de Uniformes</h1>
		</div>
		<div class="col-sm-4 col-12 text-sm-end text-center">
			<a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Nuevo Uniforme</a>
		</div>
	</div>

	<br />
	<br />
	<div class="table-responsive">
		<table id="tblUniformCatalog" class="table table-striped table-bordered" style="width: 100%">
			<thead>
				<tr>
					<th>Prenda</th>
					<th>Descripción</th>
					<th>Acciones</th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/uniformCatalog.js"></script>
}