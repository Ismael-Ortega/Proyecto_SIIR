@{
    ViewData["Title"] = "Lista de Grupos Representativos";
}
<div class="container-fluid mt-4">
    <div class="row align-items-center">
        <div class="col-sm-8 col-12 mb-2 mb-sm-0">
            <h1 class="display-4 m-0">Grupos Representativos</h1>
        </div>
        <div class="col-sm-4 col-12 text-sm-end text-center">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear nuevo grupo representativo</a>
        </div>
    </div>
    <div class="table-responsive mt-3">
        <table id="tblRepresentatives" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Categoria</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts {
    <script src="~/js/representatives.js"></script>
}