@{
    ViewData["Title"] = "Grupos Representativos";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-8">
            <h1 class="display-4">Grupos Representativos</h1>
        </div>
        <div class="col-4 d-flex justify-content-end align-items-center">
            <!--REVISAR DISPLAY-->
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Crear nuevo grupo representativo</a>
        </div>
    </div>
    <br/>
    <br/>
    <table id="tblRepresentatives" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/representative.js"></script>
}