@{
    ViewData["Title"] = "Home Page";
}

<main class="container text-center mt-5">
    <h2 class="display-4">SIIR</h2>
    <p class="lead">Sistema Integral de Información de Grupos Representativos</p>

    <div class="my-4">
        <img id="fox-image" src="/images/fox-americano.png" alt="Fox Mascot" class="img-fluid" style="width: 400px;">
    </div>

    <div class="row mt-5">
        <div class="col-md-6 mb-4">
            <button class="btn btn-primary btn-lg w-50">Grupos Deportivos</button>
        </div>

        <div class="col-md-6 mb-4">
            <button class="btn btn-primary btn-lg w-50">Grupos Culturales</button>
        </div>
    </div>

    <br />
    <br />
    <br />
    <br />
</main>

@section Scripts {
    <script>
        // Array de las rutas de las imágenes
        const images = [
            "/images/fox.png",
            "/images/fox-voleibol.png",
            "/images/fox-americano.png"
        ];

        let currentIndex = 0;
        const imageElement = document.getElementById("fox-image");

        // Cambiar imagen cada 3 segundos (3000 milisegundos)
        setInterval(() => {
            currentIndex = (currentIndex + 1) % images.length; // Ciclar entre las imágenes
            imageElement.src = images[currentIndex]; // Cambiar el src de la imagen
        }, 3000);
    </script>
}
